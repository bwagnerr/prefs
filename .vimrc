filetype on
filetype plugin on
syntax enable
set showcmd
set autoindent
set expandtab
set smarttab
set shiftwidth=2
set softtabstop=2
set wildmenu
set wildmode=list:longest,full
set backspace=2
set number
set ignorecase
set smartcase
set hlsearch
highlight MatchParen ctermbg=4
set showmatch
set nobackup
set laststatus=2
set statusline=%F%m%r%h%w\ (%{&ff}){%Y}\ [%l,%v][%p%%]
